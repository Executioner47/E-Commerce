<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %> <%-
    include('./partials/sub-header.ejs') %>
    <div class="row my-5 mx-0">
      <div class="col-md-6 m-auto">
        <div class="card card-body p-4">
          <h1 class="text-center mb-3">Register</h1>
          <%- include("./partials/messages.ejs") %>
          <form action="/home/register" method="POST">
            <div class="form-group mb-3">
              <label for="name" class="mb-2 fs-4">Name</label>
              <input
                type="name"
                id="name"
                name="name"
                class="form-control mb-2"
                placeholder="Enter Name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
              />
            </div>
            <div class="form-group mb-3">
              <label for="email" class="mb-2 fs-4">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control mb-2"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
            <div class="form-group mb-3">
              <label for="password" class="mb-2 fs-4">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control mb-2"
                placeholder="Create Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
            <div class="form-group mb-3">
              <label for="password2" class="mb-2 fs-4">Confirm Password</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control mb-2"
                placeholder="Confirm Password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
            <button type="submit" class="btn btn-dark btn-block">
              Register
            </button>
          </form>
          <p class="lead mt-3">
            Have An Account? <a href="/home/login">Login</a>
          </p>
        </div>
      </div>
    </div>
    <%- include('./partials/footer.ejs')%>
    <div class="register"></div>
    <script src="main.js"></script>
    <script src="productDetails.js"></script>
    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
