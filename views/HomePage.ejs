<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

  <body>
    <!-- Start Chat  -->
    <div class="chat m-3" style="z-index: 2">
      <div class="fw-bold fs-5 px-4 py-2">
        <i class="fa-regular fa-comment"></i> Help
      </div>
    </div>
    <!-- End Chat  -->
    <!-- Start Header  -->
    <%- include('./partials/navbar.ejs') %>
      <!-- End Header  -->
      <%- include('./partials/sub-header.ejs') %>
        <!-- Start hero -->
        <div class="hero">
          <div class="container m-0 d-flex align-items-center" style="height: 700px">
            <div class="text text-light ps-5">
              <h1>Order all products easily and at the best price.</h1>
              <p class="text-white-50">
                You can order business purchases through the platform from any
                global site.
              </p>
              <div class="btns-contanier d-flex">
                <button class="btn btn-lg btn-danger rounded-pill px-4 py-2">
                  Shop Now
                </button>
                <button class="btn btn-lg btn-warning rounded-pill px-4 py-2 ms-2">
                  Contact Us
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- End hero -->
        <!-- Start Landing Page -->
        <div class="landing-page">
          <div class="container-fluid px-5">
            <!-- Start Categories -->
            <div class="categories mt-5">
              <header class="d-flex align-items-center fw-bold">
                <h2 class="fs-1">Categories</h2>
                <button class="btn ms-auto rounded-0 border-0 fs-4">
                  <a href="" class="text-decoration-none animatedArrow text-danger">View All<i
                      class="fa-solid fa-arrow-right ms-3"></i></a>
                </button>
                </header>
                <div class="body-content row gap-3 mt-4">
                  <div class="col py-5 rounded">
                    <a href="" class="text-decoration-none">
                      <div class="image text-center">
                      <img src="Imgs/category1.png" alt="" height="120px" class="text-center" />
                    </div>
                    <div class="text text-center fs-3 mt-4">
                      <span class="text-dark">Food </span>
                    </div>
                    </a>
                    </div>
                    <div class="col py-5 rounded">
                      <a href="" class="text-decoration-none">
                        <div class="image text-center">
                      <img src="Imgs/category2.png" alt="" height="120px" class="text-center" />
                    </div>
                    <div class="text text-center fs-3 mt-4">
                      <span class="text-dark">Desktop </span>
                    </div>
                    </a>
                    </div>
                    <div class="col py-5 rounded">
                      <a href="" class="text-decoration-none">
                        <div class="image text-center">
                      <img src="Imgs/category3.png" alt="" height="120px" class="text-center" />
                    </div>
                    <div class="text text-center fs-3 mt-4">
                      <span class="text-dark">Occasions </span>
                    </div>
                    </a>
                    </div>
                    <div class="col py-5 rounded">
                      <a href="" class="text-decoration-none">
                        <div class="image text-center">
                      <img src="Imgs/category4.png" alt="" height="120px" class="text-center" />
                    </div>
                    <div class="text text-center fs-3 mt-4">
                      <span class="text-dark">Technology </span>
                    </div>
                    </a>
                    </div>
                    <div class="col py-5 rounded">
                      <a href="" class="text-decoration-none">
                        <div class="image text-center">
                      <img src="Imgs/category5.jpg" alt="" height="120px" class="text-center" />
                    </div>
                    <div class="text text-center fs-3 mt-4">
                      <span class="text-dark">School </span>
                    </div>
                    </a>
                    </div>
                    <div class="col py-5 rounded">
                      <a href="" class="text-decoration-none">
                        <div class="image text-center">
                      <img src="Imgs/category6.png" alt="" height="120px" class="text-center" />
                    </div>
                    <div class="text text-center fs-3 mt-4">
                      <span class="text-dark">Hygiene </span>
                    </div>
                    </a>
                    </div>
                    </div>
            </div>
            <!-- End Categories -->
            <!-- Start Mobiles Deals -->
           <div class="mobiles-deals mt-5 pt-3 pb-5">
            <header class="d-flex align-items-center fw-bold">
              <h2 class="fs-1">Mobiles Deals</h2>
              <button class="btn ms-auto rounded-0 border-0 fs-4">
                <a href="/home/mobiles" class="text-decoration-none animatedArrow text-danger">View All<i
                    class="fa-solid fa-arrow-right ms-3"></i></a>
              </button>
            </header>
              <div class="body-content">
                <div class="swiper">
                  <div class="swiper-wrapper">
                  <% arr.map((item)=>{ %>
                    <% if(item.category == "Mobiles") {%> 
                    <div class="swiper-slide bg-light p-2">
                        <div class="text-center">
                          <a href="/productDetails/<%= item._id %>"><img src="<%= item.image_url %>" class="product-img" alt="" height="220" />
                        </div>
                        <div class="text mb-1">
                          <a href="/productDetails/<%= item._id %>" class="text-decoration-none text-dark text-product fw-bold">
                            <%= item.name %>
                          </a>
                        </div>
                        <div class="price text-primary">
                          <span class="fw-bold"><%= item.price %></span>
                        </div>
                        <div class="mt-4 text-center text-light fs-5 fw-bold cursor-pointer m-auto addtocarttext add-to-cart rounded-pill px-3 py-2">
                          <span >Add to Cart <i class="fa-solid fa-plus ms-2 fs-5"></i></span> 
                        </div>
                    </div>
                    <% } %> 
                  <% }) %>
                  </div>
                  <div class="swiper-scrollbar"></div>
                </div>
              </div>
            </div>
            <!-- End Mobiles Deals -->
            <!-- Start Banner -->
            <div class="banner mt-5 d-flex align-items-center" style="height: 100%">
                      <div class="container m-0">
                        <div class="banner-text text-light fs-3 p-5 m-5">
                          <h1>
                            Office stationery Everything the office <br />
                            needs is here.
                          </h1>
                          <button class="btn btn-lg btn-danger rounded-pill px-4 py-2 mt-4">
                            Shop Now
                          </button>
                        </div>
                      </div>
            </div>
            <!-- End Banner -->
           <!-- Start Laptop Deals -->
           <div class="laptop-deals mt-5 pt-3 pb-5">
            <header class="d-flex align-items-center fw-bold">
              <h2 class="fs-1">Laptop Deals</h2>
              <button class="btn ms-auto rounded-0 border-0 fs-4">
                <a href="/home/laptops" class="text-decoration-none animatedArrow text-danger">View All<i
                    class="fa-solid fa-arrow-right ms-3"></i></a>
              </button>
            </header>
              <div class="body-content">
                <div class="swiper">
                  <div class="swiper-wrapper">
                  <% arr.map((item)=>{ %>
                    <% if(item.category == "Laptop") {%> 
                    <div class="swiper-slide bg-light p-2">
                        <div class="text-center">
                          <a href="/productDetails/<%= item._id %>"><img src="<%= item.image_url %>" class="product-img" alt="" height="220" />
                        </div>
                        <div class="text mb-1">
                          <a href="/productDetails/<%= item._id %>" class="text-decoration-none text-dark text-product fw-bold">
                            <%= item.name %>
                          </a>
                        </div>
                        <div class="price text-primary">
                          <span class="fw-bold"><%= item.price %></span>
                        </div>
                        <div class="mt-4 text-center text-light fs-5 fw-bold cursor-pointer m-auto addtocarttext add-to-cart rounded-pill px-3 py-2">
                          <span >Add to Cart <i class="fa-solid fa-plus ms-2 fs-5"></i></span> 
                        </div>
                    </div>
                    <% } %> 
                  <% }) %>
                  </div>
                  <div class="swiper-scrollbar"></div>
                </div>
              </div>
            </div>
            <!-- End Laptop Deals -->
            <!-- Start Electronics -->
            <div class="electronics mt-5 p-5">
                  <header class="d-flex align-items-center fw-bold">
                    <h2 class="fs-1">
                      Electronics - <span class="text-danger">Up TO 50% OFF</span>
                    </h2>
                    <button class="btn ms-auto rounded-0 border-0 fs-4">
                  <a href="" class="text-decoration-none animatedArrow text-danger">View All<i
                      class="fa-solid fa-arrow-right ms-3"></i></a>
                </button>
                </header>
                <div class="body-content mt-4">
                  <div class="row text-center mt-3">
                    <div class="col-lg-2 col-md-4 col-sm-6">
                      <div class="image">
                      <a href=""><img src="Imgs/ele1.png" height="400px" alt="" /></a>
                    </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                      <div class="image">
                      <a href=""><img src="Imgs/ele2.png" height="400px" alt="" /></a>
                    </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                      <div class="image">
                      <a href=""><img src="Imgs/ele3.png" height="400px" alt="" /></a>
                    </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                      <div class="image">
                      <a href=""><img src="Imgs/ele4.png" height="400px" alt="" /></a>
                    </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                      <div class="image">
                      <a href=""><img src="Imgs/ele5.png" height="400px" alt="" /></a>
                    </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                      <div class="image">
                      <a href=""><img src="Imgs/ele6.png" height="400px" alt="" /></a>
                    </div>
                    </div>
                    </div>
                    </div>
              </div>
            <!-- End Electronics --> 
            <!-- Start homeAppliances Deals -->
            <div class="homeAppliances-deals mt-5 pt-3 pb-5">
              <header class="d-flex align-items-center fw-bold">
                <h2 class="fs-1">HomeAppliances Deals</h2>
                <button class="btn ms-auto rounded-0 border-0 fs-4">
                  <a href="/home/homeAppliances" class="text-decoration-none animatedArrow text-danger">View All<i
                      class="fa-solid fa-arrow-right ms-3"></i></a>
                </button>
              </header>
                <div class="body-content">
                  <div class="swiper">
                    <div class="swiper-wrapper">
                    <% arr.map((item)=>{ %>
                      <% if(item.category == "homeAppliances") {%> 
                      <div class="swiper-slide bg-light p-2">
                          <div class="text-center">
                            <a href="/productDetails/<%= item._id %>"><img src="<%= item.image_url %>" class="product-img" alt="" height="220" />
                          </div>
                          <div class="text mb-1">
                            <a href="/productDetails/<%= item._id %>" class="text-decoration-none text-dark text-product fw-bold">
                              <%= item.name %>
                            </a>
                          </div>
                          <div class="price text-primary">
                            <span class="fw-bold"><%= item.price %></span>
                          </div>
                          <div class="mt-4 text-center text-light fs-5 fw-bold cursor-pointer m-auto addtocarttext add-to-cart rounded-pill px-3 py-2">
                            <span >Add to Cart <i class="fa-solid fa-plus ms-2 fs-5"></i></span> 
                          </div>
                      </div>
                      <% } %> 
                    <% }) %>
                    </div>
                    <div class="swiper-scrollbar"></div>
                  </div>
                </div>
            </div>
             <!-- End homeAppliances Deals -->
        </div>
                <!-- End Landing Page -->
      <%- include('./partials/footer.ejs') %>
      <!-- swiper  -->
      <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
      <script>
        const swiper = new Swiper(".swiper", {
          keyboard: {
            enabled: true,
            onlyInViewport: false,
          },
          scrollbar: {
            el: ".swiper-scrollbar",
            hide: true,
          },
          breakpoints: {
            // when window width is <= 499px
            499: {
              slidesPerView: 3,
              spaceBetweenSlides: 3,
              slidesPerGroup: 3,
            },
            // when window width is <= 999px
            999: {
              slidesPerView: 6.3,
              spaceBetweenSlides: 50,
              slidesPerGroup: 7,
            },
          },
        });
      </script>
   </body>

</html>